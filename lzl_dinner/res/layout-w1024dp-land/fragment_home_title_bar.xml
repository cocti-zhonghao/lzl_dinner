<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:background="#3b3b3b"
    android:paddingBottom="40dp" >

    <ImageView
        android:id="@+id/home_title_bar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:src="@drawable/logo" />

    <DigitalClock
        android:id="@+id/home_title_bar_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="72dp"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/home_title_bar_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/home_title_bar_now"
        android:layout_marginRight="29dp"
        android:layout_marginTop="20dp"
        android:text="12/18 周三 七月初四"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/home_title_bar_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home_title_bar_date"
        android:layout_alignBottom="@+id/home_title_bar_date"
        android:layout_alignLeft="@+id/home_title_bar_now"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/home_title_bar_date"
        android:text="晴 5℃"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/home_title_bar_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_title_bar_now"
        android:layout_below="@id/home_title_bar_weather"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/home_title_bar_weather_icon"
        android:drawableLeft="@drawable/local"
        android:text="  广州"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/home_title_bar_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/home_title_bar_now"
        android:src="@drawable/weather_sun" />

</RelativeLayout>
