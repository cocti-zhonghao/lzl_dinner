<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_content_item2_root"
    android:layout_width="141dp"
    android:layout_height="122dp"
    android:background="#36c77b"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/home_content_item2_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/home_discount" />

    <TextView
        android:id="@+id/home_content_item2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_content_item2_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="优惠活动"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
